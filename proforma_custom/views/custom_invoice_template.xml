<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="custom_invoice_template">
        <t t-call="web.html_container">
            <div class="page">
                <!-- Header Section -->
                <div class="raw">
                    <t t-foreach="docs" t-as="doc">
                        <div class="col-6">
                            <p t-field="doc.company_id.name" style="font-weight: bold;"/>
                        </div>
                        <div class="col-6">
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo" style="max-width: 150px; max-height: 150px;"/>
                        </div>
                    </t>
                </div>
                
            </div>
        </t>
    </template>
</odoo>
