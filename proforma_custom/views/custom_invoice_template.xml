<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="custom_invoice_template">
        <t t-call="web.html_container">
            <div class="page">
                <!-- Header Section -->
                <div class="header" t-att-style="report_header_style">
                    <t t-foreach="docs" t-as="doc">
                        <div class="o_simple_header">
                            <div class="row align-items-center" style="display: flex; align-items: center;">
                                <!-- Company Name (8 columns, moved up a little) -->
                                <div class="col-8" style="margin-top: 20px;">
                                    <strong t-if="doc.company_id.name" style="font-size: 20px;">
                                        <span t-field="doc.company_id.name"/>
                                    </strong>
                                </div>
                                
                                <!-- Company Logo (4 columns, with reduced size) -->
                                <div class="col-4 text-right" style="margin: 0; padding: 0;">
                                    <img t-if="doc.company_id.logo" 
                                         t-att-src="image_data_uri(doc.company_id.logo)" 
                                         alt="Company Logo" 
                                         style="width: 200px; height: 100px; margin: 0; padding: 0;"/>
                                </div>
                            </div>
                            
                            <!-- Address Section -->
                            <div class="row">
                                <div class="col-12" style="margin-top: 20px;">
                                    <p style="font-size: 12px; margin-bottom: 5px;">
                                        Deposı̇te İş Mer. A Blok No. 311<br/>
                                        İkitelli osb. Başakşehir İstanbul-Türkiye<br/>
                                        Vergi No. 8831154019
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>                                        
                                     
    
</odoo>
