<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="custom_invoice_template">
        <t t-call="web.html_container">
            <div class="page">
                <!-- Header Section -->
                <div class="header" t-att-style="report_header_style">
                    <t t-foreach="docs" t-as="doc">
                        <div class="o_simple_header">
                            <div class="row">
                                <!-- Company Logo -->
                                <div class="col-6">
                                    <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Company Logo"/>
                                </div>
                                
                                <!-- Company Name -->
                                <div class="col-6 text-right">
                                    <h2 t-if="doc.company_id.name">
                                        <span t-field="doc.company_id.name"/>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        
                    </t>
                </div>
            </div>
        </t>
    </template>               
    
</odoo>
