<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Settings -->
        <record model="ir.module.category" id="lugano_survey">
            <field name="name">Lugano Egypt</field>
            <field name="description">Manage Lugano Coffee Egypt.</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_lugano_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="lugano_survey"/>
        </record>

        <record id="group_lugano_leader" model="res.groups">
            <field name="name">Team Leader</field>
            <field name="category_id" ref="lugano_survey"/>
            <field name="implied_ids" eval="[(4, ref('lugano_eg.group_lugano_user'))]"/>
        </record>

        <record id="group_lugano_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="lugano_survey"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('lugano_eg.group_lugano_leader'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="model_lugano_survey_personal_rule" model="ir.rule">
            <field name="name">Personal Visits</field>
            <field name="model_id" ref="model_lugano_survey"/>
            <field name="domain_force">['|',('user_id','=',user.id), ('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('lugano_eg.group_lugano_user'))]"/>
        </record>

        <record id="model_lugano_survey_see_all" model="ir.rule">
            <field name="name">All Visits</field>
            <field ref="model_lugano_survey" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('lugano_eg.group_lugano_leader'))]"/>
        </record>

    </data>
</odoo>
