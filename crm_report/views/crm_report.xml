<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="crm_activity_report_tree">
            <field name="name">crm_activity_report_tree</field> 
            <field name="model">crm.activity.report</field> 
            <field name="inherit_id" ref="crm.crm_activity_report_view_tree"/> 
            <field name="arch" type="xml">
                <field name="author_id" position="after">
                    <field name="lead_id" widget="many2one" />
                </field>
            </field>
        </record>

        <record id="crm_activity_report_action_inherit" model="ir.actions.act_window">
            <field name="name">Activities</field>
            <field name="res_model">crm.activity.report</field>
            <field name="inherit_id" ref="crm.crm_activity_report_action"/>
            <field name="view_mode">graph,pivot,tree</field>
            <field name="domain" eval="[
                ['body', 'not ilike', 'Görüntüle Aday/Fırsat'],
                ['body', 'not ilike', 'View Lead/Opportunity']
            ]"/>
        </record>

        
    </data>
</odoo>
