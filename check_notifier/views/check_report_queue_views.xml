<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_account_check_form_inherit" model="ir.ui.view">
            <field name="name">account.check.form.inherit</field>
            <field name="model">account.check</field>
            <field name="inherit_id" ref="l10n_tr_account_check.view_account_check_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_different_currency_equivalent']" position="after">
                    <field name="result_domain"/>
                </xpath>
            </field>
        </record>

        <record id="action_today_currency_check_records" model="ir.actions.act_window">
            <field name="name">Today Checks</field>
            <field name="res_model">account.check</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('type', '=', 'third'),
                ('is_different_currency_equivalent', '=', True),
                ('payment_date', '=', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                'search_default_state': 'holding', 'default_type': 'third'
                }
            </field>
        </record>
    </data>
</odoo>