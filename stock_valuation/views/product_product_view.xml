<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_product_form">
        <field name="name">product_product_form</field> <!--View name-->
        <field name="model">product.product</field> <!--Model name where view will applied-->
        <field name="inherit_id" ref="product.product_normal_form_view"/> <!--External ID of Parent view which inherited-->
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="cost" string="Cost">
                    <tree>
                        <field name="location_id" domain="[('usage', 'in', ['internal', 'transit'])]" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="name" attrs="{'readonly': [('id', '!=', False)]}" readonly="context.get('single_product', False)" force_save="1" options="{'no_create': True}"/>
                        <field name="quantity" optional="show" string="On Hand Quantity"/>
                        <field name="uom_id" groups="uom.group_uom" string="UoM"/>
                        <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                    </tree>
                </page>
            </xpath>
        </field>
    </record>

     <record model="ir.ui.view" id="stock_move_form">
        <field name="name">stock_move_form</field> <!--View name-->
        <field name="model">stock.move</field> <!--Model name where view will applied-->
        <field name="inherit_id" ref="stock.view_move_form"/> <!--External ID of Parent view which inherited-->
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="resut"/>
        </field>
    </record>
</odoo>
