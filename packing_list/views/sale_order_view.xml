<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.weights</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='price_subtotal']" position="before">
                <field name="net_weight" optional="hide"/>
                <field name="gross_weight" optional="hide"/>
            </xpath>
            <xpath expr="//tree//field[@name='product_packaging_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
