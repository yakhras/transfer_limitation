<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- product.template -->
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='weight']" position="after">
                    <label for="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="gross_weight"/>
                        <span><field name="weight_uom_name"/></span>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- product.product -->
        <record id="product_variant_form_view" model="ir.ui.view">
            <field name="name">product.variant.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='weight']" position="after">
                    <label for="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" name="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                        <field name="gross_weight"/>
                        <span><field name="weight_uom_name"/></span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
