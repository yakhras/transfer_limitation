                    <searchpanel>
                        <field name="categ_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record> -->

        <record id="action_user_email_signature" model="ir.actions.act_window">
            <field name="name">Email Signature</field>
            <field name="res_model">res.users.email.signature</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    View Signatures.
                </p>
            </field>
            <field name="context">{
            }</field>
            <field name="domain">[]</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_user_email_signature" name="Email Signature" action="action_user_email_signature" parent="sale.product_menu_catalog" sequence="7"/>


        <record id="view_users_form_inherit_email_signatures" model="ir.ui.view">
            <field name="name">res.users.form.inherit.email.signatures</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!-- Add the email_signatures One2many field to the form view -->
                <xpath expr="//sheet//group[@name='personal_info']" position="inside">
                    <group string="Email Signatures">
                        <field name="email_signatures">
                            <tree>
                                <field name="email"/>
                                <field name="signature_name"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>