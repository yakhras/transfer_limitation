<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_user_email_signature_form" model="ir.ui.view">
            <field name="name">user.email.signature.form</field>
            <field name="model">res.users.email.signature</field>
            <field name="arch" type="xml">
                <form string="Email Signature" create="1">
                    <sheet>
                        <group col="2">  <!-- This ensures the two groups are side by side -->
                            <group>
                                <field name="user_id"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="signature_name"/>
                                <field name="signature"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_user_email_signature_tree" model="ir.ui.view">
            <field name="name">user.email.signature.tree</field>
            <field name="model">res.users.email.signature</field>
            <field name="arch" type="xml">
                <tree string="Email Signature" create="1">
                    <field name="user_id"/>
                    <field name="email"/>
                    <field name="signature_name"/>
                </tree>
            </field>
        </record>

