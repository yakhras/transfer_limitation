<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_product_reader_form" model="ir.ui.view">
            <field name="name">product.info.form</field>
            <field name="model">product.info</field>
            <field name="arch" type="xml">
                <form string="Product Information" create="0">
                    <sheet>
                        <group col="2">  <!-- This ensures the two groups are side by side -->
                            <group>
                                <field name="display_name"/>
                                <field name="default_code"/>
                                <field name="categ_name" readonly="1"/>
                                <field name="available_qty_location_8" readonly="1"/>
                                <field name="uom_name" readonly="1"/>
                            </group>
                                <!-- <field name="attachment_ids" widget="many2many_binary"/> -->
                                <field name="attachment_ids" widget="pdf_viewer"/>
                                <field name="pdf_url" invisible="1"/>
                                <div>
                                    <iframe t-if="record.pdf_url" t-att-src="record.pdf_url" width="100%" height="500px" style="border: none;"></iframe>
                                </div>
                                
                        </group>
                        <group string="Logistics">
                            <field name="weight" readonly="1"/>
                            <field name="gross_weight" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <t t-call="product_doc.AttachmentBox"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_product_reader_tree" model="ir.ui.view">
            <field name="name">product.info.tree</field>
            <field name="model">product.info</field>
            <field name="arch" type="xml">
                <tree string="Product Information" create="0">
                    <field name="product_id"/>
                    <field name="default_code"/>
                    <field name="available_qty_location_8"/>
                    <field name="uom_name"/>
                    <field name="categ_id"/>
                </tree>
            </field>
        </record>

        <record id="product_info_search_view" model="ir.ui.view">
            <field name="name">product.info.search</field>
            <field name="model">product.info</field>
            <field name="arch" type="xml">
                <search string="Product">
                    <field name="product_id" string="Product" filter_domain="['|', '|', ('product_id', 'ilike', self), ('default_code', 'ilike', self),('display_name', 'ilike', self)]"/>
                    <field name="categ_name" filter_domain="[('categ_id', 'child_of', raw_value)]"/>
                    <searchpanel>
                        <field name="categ_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_product_info" model="ir.actions.act_window">
            <field name="name">Product Info</field>
            <field name="res_model">product.info</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    View Products.
                </p>
            </field>
            <field name="context">{
                'group_by': ['categ_name'],
            }</field>
            <field name="domain">[('product_id.type', '=', 'product')]</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_product_info" name="Product Info" action="action_product_info" parent="sale.product_menu_catalog" sequence="6"/>
    </data>
</odoo>