<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="visit_category">
            <field name="name">Visit Management</field>
            <field name="description">Manage your Employee Visits.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_visit_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="visit_category"/>
        </record>

        <record id="group_visit_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="visit_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('acs_visits.group_visit_user'))]"/>
        </record>

        <!-- Rules -->
        <record id="model_visit_visit_personal_rule" model="ir.rule">
            <field name="name">Visit</field>
            <field name="model_id" ref="model_visit_visit"/>
            <field name="domain_force">['|',('user_id','=',user.id), ('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('acs_visits.group_visit_user'))]"/>
        </record>

        <record id="model_visit_visit_see_all" model="ir.rule">
            <field name="name">All Visits</field>
            <field ref="model_visit_visit" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('acs_visits.group_visit_manager'))]"/>
        </record>

    </data>
</odoo>
