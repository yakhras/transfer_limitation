<odoo>
    <data noupdate="0">
	
        <record id="base.res_partner_rule_private_employee" model="ir.rule">
            <field name="active">false</field>
        </record>
        
        <record model="ir.module.category" id="module_category_partner_access">
            <field name="name">Partner Access</field>
            <field name="description">Helps you manage Access Partner.</field>
            <field name="sequence">5</field>
        </record>
        
        <record id="group_partner_access_user" model="res.groups">
            <field name="name">User Partners</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="partner_access.module_category_partner_access"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_partner_access_leader" model="res.groups">
            <field name="name">Team Leader</field>
            <field name="implied_ids" eval="[(4, ref('group_partner_access_user'))]"/>
            <field name="category_id" ref="partner_access.module_category_partner_access"/>
        </record>
        
        <record id="group_partner_access_manager" model="res.groups">
            <field name="name">Team Manager</field>
            <field name="category_id" ref="partner_access.module_category_partner_access"/>
            <field name="implied_ids" eval="[(4, ref('group_partner_access_leader'))]"/>
        </record>

        <record id="group_partner_access_all" model="res.groups">
            <field name="name">All Partners</field>
            <field name="category_id" ref="partner_access.module_category_partner_access"/>
            <field name="implied_ids" eval="[(4, ref('group_partner_access_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        
        <!-- Rule for partner Access -->
        
        <!-- User partners -->
        <record id="rule_partner_access_user" model="ir.rule">
            <field name="name">View User Partners</field>
            <field ref="model_res_partner" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_partner_access_user'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
        
        <!-- Team Leader Partners -->
        <record id="rule_partner_access_leader" model="ir.rule">
            <field name="name">View Team Leader Partners</field>
            <field ref="model_res_partner" name="model_id"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('id', 'in', [rec for rec in user.get_partner_ids()])]</field>
            <field name="groups" eval="[(4, ref('group_partner_access_leader'))]"/>
        </record>

        <!-- Team Manager Partners -->
        <record id="rule_partner_access_manager" model="ir.rule">
            <field name="name">View Team Manager Partners</field>
            <field ref="model_res_partner" name="model_id"/>
            <field name="domain_force">['|',('user_id','in',user.id),('id', 'in', [rec for rec in user.get_partner_ids()])]</field>
            <field name="groups" eval="[(4, ref('group_partner_access_manager'))]"/>
        </record>
        
        <!-- All Partners -->
        <record id="rule_partner_access_all" model="ir.rule">
            <field name="name">View All partner</field>
            <field ref="model_res_partner" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_partner_access_all'))]"/>
        </record>

    </data>
</odoo>
