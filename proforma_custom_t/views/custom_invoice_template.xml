<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_yaser">
        <div t-attf-class="header" t-att-style="report_header_style">
            <div class="o_clean_header">
                <div class="row align-items-center" style="display: flex; align-items: center;">
                    <!-- Company Name (8 columns) -->
                    <div class="col-9" style="margin-top: 10px;">
                        <strong t-if="doc.company_id.name" style="font-size: 21px;">
                            <span t-field="doc.company_id.name"/>
                        </strong>
                        <p style="font-size: 13px; line-height: 1.5; font-weight: 300; color: #333; margin: 0;">
                            <span style="font-weight: 300; white-space: nowrap;">
                                <span t-field="doc.company_id.street2"/>
                                <span t-field="doc.company_id.street"/>
                                <span t-field="doc.company_id.city"/> <span t-field="doc.company_id.state_id.name"/>-<span t-field="doc.company_id.country_id.name"/>
                            </span>
                            
                        </p>
                    </div>
                    <!-- Company Logo (4 columns, with reduced size) -->
                    <div class="col-3 text-right" style="margin: 0; padding: 0;">
                        <img t-if="doc.company_id.logo" 
                                t-att-src="image_data_uri(doc.company_id.logo)" 
                                alt="Company Logo" 
                                style="width: 180px; height: 90px; margin: 0; padding: 0;"/>
                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="article">
            <t t-out="0" />
        </div>
        <div t-attf-class="footer">
            <div class="text-center" style="border-top: 1px solid black; padding-top: 5px;">
                <div class="row align-items-center">
                    <!-- Page Number (Left) -->
                    <div t-if="report_type == 'pdf'" class="col-4 text-left text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                    
                    <!-- Address (Center) -->
                    <div class="col-4 text-center">
                        <p style="font-size: 13px; line-height: 1.5; font-weight: 300; color: #333; margin: 0;">
                            <span t-esc="doc.company_id.website.replace('http://', '')"/>
                        </p>
                    </div>
            
                    <!-- Tax Number (Right) -->
                    <div class="col-4 text-right">
                        <p style="font-size: 14px; font-weight: 400; color: #333; margin: 0;">
                            Tax No.<span t-esc="doc.company_id.vat[2:] if doc.company_id.vat and doc.company_id.vat.startswith('TR') else doc.company_id.vat"/>
                        </p>
                    </div>
                </div>
            </div>
            
        </div>
    </template >
        
    <template id="custom_invoice_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="proforma_custom_t.custom_invoice_template_Arabic" t-lang= "doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="custom_invoice_template_Arabic">
        <t t-call="proforma_custom_t.external_layout_yaser">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <!-- Proforma Invoice Section -->
                <div class="row">
                    <div class="col-12" style="text-align: center;">
                        <strong style="font-size: 28px; font-family: Arial, sans-serif; border-bottom: 3px solid #000;">
                         PROFORMA INVOICE
                        </strong>
                    </div>
                </div>
                <!-- Border Line Before info -->
                <!-- <div style="border-bottom: 2px solid #333; margin-bottom: 15px; margin-top: 15px;"></div> -->
                <!-- New Row with Two Columns -->
                <div class="row" style="margin-top: 20px;">
                    <div class="col-12">
                        <div style="margin-bottom: 5px;"><strong>Customer: </strong><span t-esc="doc.partner_id.name"/></div>
                        <div style="margin-bottom: 5px;">
                            <strong>Address: </strong>
                            <span t-if="doc.partner_shipping_id.street">
                                <span t-field="doc.partner_shipping_id.street"/> 
                            </span>
                            <span t-if="doc.partner_shipping_id.street2">
                                <span t-field="doc.partner_shipping_id.street2"/> 
                            </span>
                            <span t-if="doc.partner_shipping_id.city">
                                <span t-field="doc.partner_shipping_id.city"/>
                            </span>
                            <span t-if="doc.partner_shipping_id.state_id">
                                <span t-field="doc.partner_shipping_id.state_id.name"/>
                            </span>
                            <span t-if="doc.partner_shipping_id.zip">
                                <span t-field="doc.partner_shipping_id.zip"/>
                            </span>
                            <span t-if="doc.partner_shipping_id.country_id">
                                <span t-field="doc.partner_shipping_id.country_id.name"/>
                            </span>
                        </div>
                        <div><strong>VAT: </strong> <span t-esc="doc.partner_id.vat[2:] if doc.partner_id.vat and doc.partner_id.vat.startswith('TR') else doc.partner_id.vat"/></div>
                    </div>
                </div>
                <!-- New Row with Two Columns -->
                <div class="row" style="margin-top: 20px;">
                    <!-- Left Column (col-8) -->
                    <div class="col-8">
                        <div style="margin-bottom: 5px;"><strong>Proforma Date: </strong> <span t-esc="doc.date_order.strftime('%d.%m.%Y')"/></div>
                        <div style="margin-bottom: 5px;"><strong>Proforma No.: </strong> <span t-field="doc.name"/></div>
                        <div style="margin-bottom: 5px;"><strong>Payment Terms: </strong> <span t-field="doc.payment_term_id.name"/></div>
                        <div><strong>Expiration: </strong> <span t-field="doc.expiration_days"/></div>
                    </div>

                    <!-- Right Column (col-4) -->
                    <div class="col-4">
                        <div style="margin-bottom: 5px;"><strong>Customer ref.: </strong> <span t-esc="doc.client_order_ref"/></div>
                        <div style="margin-bottom: 5px;"><strong>Incoterm: </strong> <span t-field="doc.incoterm.name"/></div>
                        <div style="margin-bottom: 5px;"><strong>Delivery Date: </strong> <span t-field="doc.commitment.strftime('%d.%m.%Y')"/></div>
                    </div>
                </div>
                <!-- Table Section -->
                <div style="margin-top: 20px;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead style="background-color: black; color: white;">
                            <tr>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: left;">Product</th>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: center;">Quantity</th>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: center;">UOM</th>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: center;">Unit Price</th>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: center;">Tax</th>
                                <th style="border: 1px none #ccc; padding: 6px; text-align: center;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody style="background-color: #f4f4f4; color: black;">
                            <!-- Loop through order line items -->
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr>
                                    <td style="border: 1px none black; padding: 6px;">
                                        <span t-esc="line.name.split(']', 1)[1].strip() if '[' in line.name and ']' in line.name else line.name"/>
                                    </td>
                                    <td style="border: 1px none black; padding: 6px; text-align: center;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td style="border: 1px none black; padding: 6px; text-align: center;">
                                        <span t-field="line.product_uom.name"/>
                                    </td>
                                    <td style="border: 1px none black; padding: 6px; text-align: center;">
                                        <span t-esc="('%.2f' % line.price_unit).rstrip('.')"/>
                                    </td>
                                    <td style="border: 1px none black; padding: 6px; text-align: center;">
                                        <span t-esc="int(line.tax_id.amount)"/>%
                                    </td>
                                    <td style="border: 1px none black; padding: 6px; text-align: center;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            
                <div class="clearfix" name="so_total_summary" style="margin-top: 20px;">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                            <table class="table table-sm" style="border: 1px solid #ccc; color: #333; border-collapse: collapse;">
                
                                <!-- Tax Totals -->
                                <tbody>
                                    <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                

                <t t-if="doc.has_note">
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-12" style="text-align: left;">
                            <!-- Styled Header for "Note" Section -->
                            <div style="background-color: #333; color: #fff; padding: 8px; border: 1px solid #ccc; font-weight: bold;">
                                Note:
                            </div>
                
                            <!-- Display HTML Note Content -->
                            <div style="margin-top: 10px; font-size: 13px; line-height: 1.6; color: #333;">
                                <t t-raw="doc.note"/>
                            </div>
                        </div>
                    </div>
                </t>
                

