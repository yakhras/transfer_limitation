<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_company_form_custom_tab" model="ir.ui.view">
        <field name="name">res.company.form.inherit.custom.tab</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Target the notebook and append after the last page -->
            <xpath expr="//form/sheet/notebook/page" position="after">
                <page string="Bank Info">
                    <group>
                        <field name="bank_ids" widget="many2many_checkboxes">
                            <tree>
                                <field name="bank_id"/>
                                <field name="acc_number"/>
                                <field name="acc_holder_name"/>
                                <field name="currency_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
