<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_company_form_custom_tab" model="ir.ui.view">
        <field name="name">res.company.form.inherit.custom.tab</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Target the notebook and append after the last page -->
            <xpath expr="//form/sheet/notebook/page" position="after">
                <page string="Bank Info">
                    <group>
                        <field name="bank_ids.acc_number"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
