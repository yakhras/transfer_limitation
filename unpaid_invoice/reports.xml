<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_unpaid_invoice_html" model="ir.actions.report">
        <field name="name">Unpaid Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">unpaid_invoice.unpaid_report</field> <!-- report data view Template id -->
        <field name="report_file">unpaid_invoice.unpaid_invoice_report</field> <!-- The template file name -->
    </record>

    <record id="action_kanban_unpaid_invoice_view" model="ir.actions.act_window">
        <field name="name">Unpaid Invoice</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">kanban, form</field>
        <field name="target">current</field>
        <field name="view_id" ref="unpaid_invoice.view_unpaid_invoice_kanban"/>
        <field name="domain">[
            ('move_type', '=', 'out_invoice'),
            ('state', '=', 'posted'),
            ('payment_state', 'in', ('not_paid', 'partial')),
            ('invoice_date_due', '&lt;', time.strftime('%Y-%m-%d')),
            ('partner_id.property_account_receivable_id.code', '=', '120001')
        </field>
        <field name="context">{
            'default_move_type': 'out_invoice',
            'move_type': 'out_invoice',
            'journal_type': 'sale',
            'group_by':'invoice_date_due',
            }
        </field>
    </record>
</odoo>