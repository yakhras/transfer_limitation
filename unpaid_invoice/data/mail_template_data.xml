<?xml version="1.0"?>
<odoo>
        <record id="unpaid_invoice" model="mail.template">
            <field name="name">Invoice: UnPaid</field>
            <field name="model_id" ref="event.model_account_move"/>
            <field name="subject">Your Unpaid Invoices for {{ object.today }}</field>
            <field name="email_from">{{ (object.company_id.email_formatted) }}</field>
            <field name="email_to">{{ (object.email and '"%s" &lt;%s&gt;' % (object.name, object.email) or object.partner_id.email_formatted or '') }}</field>
            <field name="body_html" type="html">
                
            </field>
        </record>
</odoo>
