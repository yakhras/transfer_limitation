<?xml version="1.0"?>
<odoo>
    <record id="unpaid_invoice" model="mail.template">
        <field name="name">Invoice: UnPaid</field>
        <field name="model_id" ref="unpaid_invoice.model_unpaid_invoice"/>
        <field name="subject">Reminder: Review Due Invoices Action Required</field>
        <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted) }}</field>
        <field name="email_to">{{ object.email_formatted }}</field>
        <field name="body_html" type="html">
            <h1> Dear Neslihan Hanim </h1>
        </field>
    </record>
</odoo>
