<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="unpaid_invoice_view_tree">
            <field name="name">unpaid_invoice_view_tree</field> <!--View name-->
            <field name="model">account.move</field> <!--Model name where view will applied-->
            <field name="inherit_id" ref="account.view_out_invoice_tree" /> <!--External ID of Parent view which inherited-->
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="js_class">unpaid_list</attribute>
                </xpath>
            </field>
        </record>
           
        <record model="ir.ui.view" id="unpaid_invoice_view_filter">
            <field name="name">unpaid_invoice_view_filter</field> <!--View name-->
            <field name="model">account.move</field> <!--Model name where view will applied-->
            <field name="inherit_id" ref="account.view_out_invoice_tree" /> <!--External ID of Parent view which inherited account.view_account_invoice_filter-->
            <field name="arch" type="xml">
                <filter name="late" position="attributes">
                    <attribute name="domain">[('state', '=', 'draft')]</attribute>
                </filter>
            </field>
        </record>

        <record id="unpaid_invoices_action" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="target">current</field>
            <field name="view_id" ref="unpaid_invoice_view_filter" />
        </record>
    </data>
</odoo>