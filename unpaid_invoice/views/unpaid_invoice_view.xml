<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<data>
    <record model="ir.ui.view" id="unpaid_invoice_view_tree">
        <field name="name">unpaid_invoice_view_tree</field> <!--View name-->
        <field name="model">account.move</field> <!--Model name where view will applied-->
        <field name="inherit_id" ref="account.view_out_invoice_tree"/> <!--External ID of Parent view which inherited-->
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="transfer_limit" /> 
            </xpath>
        </field>
    </record>

    <templates xml:space="preserve">
    <t t-extend="ListView.buttons">
      <t t-jquery="button.o_list_export_xlsx" t-operation="after">
        <button type="button" class="btn btn-secondary o_list_export_pdf">Export PDF</button>
      </t>
    </t>
  </templates>
  
</data>
</odoo>


  