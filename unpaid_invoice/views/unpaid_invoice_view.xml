<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="unpaid_invoice_view_button">
            <field name="name">unpaid_invoice_view_button</field> <!--View name-->
            <field name="model">account.move</field> <!--Model name where view will applied-->
            <field name="inherit_id" ref="account.view_out_invoice_tree" /> <!--External ID of Parent view which inherited-->
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="js_class">unpaid_list</attribute>
                </xpath>
            </field>
        </record>
           
        <record model="ir.ui.view" id="unpaid_invoice_view_tree">
            <field name="name">unpaid_invoice_view_tree</field> 
            <field name="model">account.move</field> 
            <field name="inherit_id" ref="account.view_out_invoice_tree" /> 
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">payment_state</attribute>
                </xpath>
            </field>
        </record>

        <record id="unpaid_invoices_action" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="unpaid_invoice.unpaid_invoice_view_tree"/>
            <field name="target">current</field>
            <field name="domain">[('move_type', '=', 'out_invoice'), 
                ('state', '=', 'posted'), 
                ('payment_state', 'in', ('not_paid', 'partial')), 
                ('invoice_date_due', '&lt;', time.strftime('%Y-%m-%d')),
                ('partner_id.property_account_receivable_id.code', '=', '120001')]</field>
            <field name="context">{'default_move_type': 'out_invoice', 'move_type': 'out_invoice', 'journal_type': 'sale', search_default_groupby_partner_id':1}</field>
        </record>
    </data>
</odoo>