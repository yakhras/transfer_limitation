    <template id="export_in_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-bordered" style="table-layout: fixed">
                        <!-- Adding the sequence header -->
                        <tr>
                            <th>#</th>
                            <t t-foreach="record['header']" t-as="header">
                                <th><span t-out="header"/></th>
                            </t>
                        </tr>
                        <!-- Adding the sequence data and other data -->
                        <t t-foreach="data_len" t-as="record" t-esc="record_index">
                            <tr>
                                <!-- Sequence column -->
                                <td><t t-esc="record_index + 1"/></td>
                                <t t-foreach="record" t-as="data">
                                    <td><span t-out="record['data'][rec][ln]"/></td>
                                </t>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
    
    
