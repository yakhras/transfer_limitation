    <template id="export_in_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-bordered"
                           style="table-layout: fixed">
                        <thead>
                            <tr>
                                <th>Sequence</th> <!-- Dynamic Sequence header -->
                                <t t-foreach="length" t-as="length">
                                    <th>
                                        <span t-esc="record['header'][length]"/>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data_len" t-as="rec" t-index="row_index">
                                <tr>
                                    <td>
                                        <span t-esc="row_index + 1"/> <!-- Dynamic sequence based on row index -->
                                    </td>
                                    <t t-foreach="length" t-as="ln">
                                        <td>
                                            <span t-esc="record['data'][rec][ln]"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    
</odoo>