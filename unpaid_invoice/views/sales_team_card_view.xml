        <record model="ir.ui.view" id="view_unpaid_invoice_card">
            <field name="name">unpaid.invoice.card.view</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors" sample="1" create="false">
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card o_kanban_card" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #f9f9f9; border-radius: 8px;">
                                <div class="o_project_kanban_main">
                                    <div class="o_kanban_card_content mw-100">
                                        <div class="o_kanban_primary_left">
                                            <div class="o_primary">
                                                <span class="o_text_overflow" style="border-bottom: 1px solid #ccc; display: inline-block; padding-bottom: 5px; margin-bottom: 15px;">
                                                    <t t-esc="record.name.value" />
                                                </span>
                                                <div style="display: flex; gap: 10px; margin-top: 15px;">
                                                    <a name="unpaid_invoice.action_unpaid_invoice_today" type="action" class="btn btn-outline-primary">
                                                        <i class="fa fa-calendar-check-o"/> Today
                                                    </a>
                                                    <a name="unpaid_invoice.action_unpaid_invoice_before_today" type="action" class="btn btn-outline-warning">
                                                        <i class="fa fa-calendar-times-o"/> Previous
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- <div class="o_kanban_right">
                                            <div class="o_stat_info">
                                                <span class="o_stat_value">
                                                    <t t-esc="record.total_count.value" />
                                                </span>
                                                <span class="o_stat_text">Invoices</span>
                                            </div>
                                        </div> -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
      <!-- unpaid.invoice tree view -->
        <record id="view_unpaid_invoice_tree" model="ir.ui.view">
            <field name="name">unpaid.invoice.tree</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="invoice_id"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="payment_state"/>
                    <field name="due_date"/>
                    <field name="team_id"/>
                </tree>
            </field>
        </record>

        <!-- unpaid.invoice form view -->
        <record id="view_unpaid_invoice_form" model="ir.ui.view">
            <field name="name">unpaid.invoice.form</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <button name="populate_unpaid_invoices" string="Populate Unpaid Invoices" type="object" class="btn-primary"/>
                        <!-- Other form fields go here -->
                        <group>
                            <field name="invoice_id"/>
                            <field name="partner_id"/>
                            <field name="amount_total"/>
                            <field name="currency_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- unpaid.invoice search view -->
        <record id="view_unpaid_invoice_filter" model="ir.ui.view">
            <field name="name">unpaid.invoice.select</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Invoice">    
               </search>
            </field>
        </record>
 
        
        <!-- crm.team kanban action -->
        <record id="action_unpaid_invoice_kanban" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices</field>
            <field name="res_model">crm.team</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="unpaid_invoice.view_unpaid_invoice_card"/>
        </record>

        <!-- account.move tree view -->
        <record id="view_account_move_tree_unpaid" model="ir.ui.view">
            <field name="name">account.move.tree.unpaid</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='activity_ids']" position="replace"/>
                <xpath expr="//field[@name='amount_untaxed_signed']" position="replace"/>
                <xpath expr="//field[@name='to_check']" position="replace"/>
            </field>
        </record>

        <!-- unpaid.invoice previous action -->
        <record id="action_unpaid_invoice_before_today" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices Team</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '&lt;', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team': [active_id],
                    'default_team': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field>
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>

        <!-- account.move today action -->
        <record id="action_unpaid_invoice_today" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices Team</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="domain">[
                ('state', '=', 'posted'),
                ('move_type', 'in', ['out_invoice', 'out_refund']),
                ('payment_state', 'in', ['not_paid', 'partial']),
                ('invoice_date_due', '=', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team_id': [active_id],
                    'default_team_id': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field> 
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>
            

        <!-- Menu Item -->
        <menuitem id="menu_unpaid_invoice_kanban" name="Unpaid Invoices" 
                  parent="point_of_sale.menu_point_rep" 
                  action="action_unpaid_invoice_kanban"
                  sequence="11"/>
    </data>
</odoo>
