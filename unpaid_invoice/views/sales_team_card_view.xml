<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="view_unpaid_invoice_card">
            <field name="name">unpaid.invoice.card.view</field>
            <field name="model">crm.team</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors" sample="1" create="false">
                    <field name="name" />
                    <field name="unpaid_invoice_total_usd"/>
                    <field name="unpaid_invoice_total_eur"/>
                    <field name="unpaid_invoice_total_try"/>
                    <field name="unpaid_invoice_total_2weeks_usd"/>
                    <field name="unpaid_invoice_total_2weeks_eur"/>
                    <field name="unpaid_invoice_total_2weeks_try"/>
                    <field name="unpaid_invoice_total_week_usd"/>
                    <field name="unpaid_invoice_total_week_eur"/>
                    <field name="unpaid_invoice_total_week_try"/>
                    <field name="unpaid_invoice_total_today_usd"/>
                    <field name="unpaid_invoice_total_today_eur"/>
                    <field name="unpaid_invoice_total_today_try"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card o_kanban_card" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #f9f9f9; border-radius: 8px;">
                                <div class="o_project_kanban_main">
                                    <div class="o_kanban_card_content mw-100">
                                        <div class="o_kanban_primary_left">
                                            <div class="o_primary">
                                                <span class="o_text_overflow" style="border-bottom: 1px solid #ccc; display: inline-block; padding-bottom: 5px; margin-bottom: 15px;">
                                                    <t t-esc="record.name.value" />
                                                </span>
                                                
                                                <t t-if="record.unpaid_invoice_total_today_usd.value != 0 or record.unpaid_invoice_total_today_eur.value != 0 or record.unpaid_invoice_total_today_try.value != 0">
                                                    <li style="padding: 5px">
                                                        <a name="unpaid_invoice.action_unpaid_invoice_today" type="action" class="action-link" style="font-weight: bold; color: #007BFF; text-decoration: none; transition: color 0.3s ease;">
                                                            Today
                                                        </a>
                                                        <div class="stat-values" style="display: flex; gap: 10px;">
                                                            <t t-if="record.unpaid_invoice_total_today_usd.value != 0">
                                                                <span class="o_stat_value usd" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_today_usd.value"/> USD
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_today_eur.value != 0">
                                                                <span class="o_stat_value eur" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_today_eur.value"/> EUR
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_today_try.value != 0">
                                                                <span class="o_stat_value try" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_today_try.value"/> TRY
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </li>
                                                </t>
                                                <t t-if="record.unpaid_invoice_total_week_usd.value != 0 or record.unpaid_invoice_total_week_eur.value != 0 or record.unpaid_invoice_total_week_try.value != 0">
                                                    <li style="padding: 5px">
                                                        <a name="unpaid_invoice.action_unpaid_invoice_week" type="action" class="action-link" style="font-weight: bold; color: #007BFF; text-decoration: none; transition: color 0.3s ease;">
                                                            Week
                                                        </a>
                                                        <div class="stat-values" style="display: flex; gap: 10px;">
                                                            <t t-if="record.unpaid_invoice_total_week_usd.value != 0">
                                                                <a name="unpaid_invoice.action_unpaid_invoice_week_usd" type="action">
                                                                    <span class="o_stat_value usd" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                        <t t-esc="record.unpaid_invoice_total_week_usd.value"/> USD
                                                                    </span>
                                                                </a>    
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_week_eur.value != 0">
                                                                <span class="o_stat_value eur" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_week_eur.value"/> EUR
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_week_try.value != 0">
                                                                <span class="o_stat_value try" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_week_try.value"/> TRY
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </li>
                                                </t>
                                                <t t-if="record.unpaid_invoice_total_2weeks_usd.value != 0 or record.unpaid_invoice_total_2weeks_eur.value != 0 or record.unpaid_invoice_total_2weeks_try.value != 0">
                                                    <li style="padding: 5px"> 
                                                        <a name="unpaid_invoice.action_unpaid_invoice_2weeks" type="action" class="action-link" style="font-weight: bold; color: #007BFF; text-decoration: none; transition: color 0.3s ease;">
                                                            2 Weeks
                                                        </a>
                                                        <div class="stat-values" style="display: flex; gap: 10px;">
                                                            <t t-if="record.unpaid_invoice_total_2weeks_usd.value != 0">
                                                                <span class="o_stat_value usd" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_2weeks_usd.value"/> USD
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_2weeks_eur.value != 0">
                                                                <span class="o_stat_value eur" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_2weeks_eur.value"/> EUR
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_2weeks_try.value != 0">
                                                                <span class="o_stat_value try" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_2weeks_try.value"/> TRY
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </li>
                                                </t>
                                                <t t-if="record.unpaid_invoice_total_usd.value != 0 or record.unpaid_invoice_total_eur.value != 0 or record.unpaid_invoice_total_try.value != 0">
                                                    <li style="padding: 5px">
                                                        <a name="unpaid_invoice.action_unpaid_invoice_month" type="action" class="action-link" style="font-weight: bold; color: #007BFF; text-decoration: none; transition: color 0.3s ease;">
                                                            Month
                                                        </a>
                                                        <div class="stat-values" style="display: flex; gap: 10px;">
                                                            <t t-if="record.unpaid_invoice_total_usd.value != 0">
                                                                <span class="o_stat_value usd" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_usd.value"/> USD
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_eur.value != 0">
                                                                <span class="o_stat_value eur" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_eur.value"/> EUR
                                                                </span>
                                                            </t>
                                                            <t t-if="record.unpaid_invoice_total_try.value != 0">
                                                                <span class="o_stat_value try" style="font-size: 14px; font-weight: bold; padding: 5px 10px; border-radius: 5px; background-color: #f0f0f0; color: #333;">
                                                                    <t t-esc="record.unpaid_invoice_total_try.value"/> TRY
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </li>
                                                </t> 
                                            </div>
                                        </div>
                                        <!-- <div class="o_kanban_right">
                                            <div class="o_stat_info">
                                                <span class="o_stat_value">
                                                    <t t-esc="record.unpaid_invoice_total_month.value" />
                                                </span>
                                            </div>
                                        </div> -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        

      <!-- unpaid.invoice tree view -->
        <record id="view_unpaid_invoice_tree" model="ir.ui.view">
            <field name="name">unpaid.invoice.tree</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="document_id"/>
                    <field name="partner_id"/>
                    <field name="amount_total" sum="Total Amount"/>
                    <field name="amount_due" sum="Total Due"/>
                    <field name="currency_id"/>
                    <field name="payment_state"/>
                    <field name="due_date"/>
                </tree>
            </field>
        </record>


        <!-- unpaid.invoice form view -->
        <record id="view_unpaid_invoice_form" model="ir.ui.view">
            <field name="name">unpaid.invoice.form</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <form create="false" class="modern-form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"/>
                        <button name="populate_unpaid_invoices" string="Populate Unpaid Invoices" type="object" class="btn-primary"/>
                        <button name="send_email_unpaid_invoices" string="Send Email" type="object" class="btn-primary"/>
                    <!-- <button name="get_current_action_domain" string="Count" type="object" class="btn-primary"/> -->
                    </header>
                    <sheet>
                        <!-- Other form fields go here -->
                        <group>
                            <field name="invoice_id" class="line-separator"/>
                            <field name="partner_id" class="line-separator"/>
                            <field name="amount_total" class="line-separator"/>
                            <field name="currency_id" class="line-separator"/>
                            <field name="team_id" class="line-separator"/>
                            <!-- <field name="unpaid_invoice_count"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- unpaid.invoice search view -->
        <record id="view_unpaid_invoice_filter" model="ir.ui.view">
            <field name="name">unpaid.invoice.select</field>
            <field name="model">unpaid.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Invoice"> 
                    <field name="team_id" string="Sales Team"/>
                    <filter string="Customer" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
               </search>
            </field>
        </record>
 
        
        <!-- crm.team kanban action -->
        <record id="action_unpaid_invoice_kanban" model="ir.actions.act_window">
            <field name="name">Unpaid Invoices</field>
            <field name="res_model">crm.team</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="unpaid_invoice.view_unpaid_invoice_card"/>
        </record>


        <!-- unpaid.invoice week action -->
        <record id="action_unpaid_invoice_week" model="ir.actions.act_window">
            <field name="name">Unpaid Invoice Week</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '&gt;=', (context_today() + relativedelta(weeks=-1)).strftime('%Y-%m-%d')),
                ('due_date', '&lt;', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team_id': active_id,
                    'default_team': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field>
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>

        <!-- unpaid.invoice week USD action -->
        <record id="action_unpaid_invoice_week_usd" model="ir.actions.act_window">
            <field name="name">Unpaid Invoice Week USD</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '&gt;=', (context_today() + relativedelta(weeks=-1)).strftime('%Y-%m-%d')),
                ('due_date', '&lt;', context_today().strftime('%Y-%m-%d')),
                ('currency_id.name', '=', 'USD'),
                ]</field>
            <field name="context">{
                    'search_default_team_id': active_id,
                    'default_team': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field>
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>

        <!-- unpaid.invoice 2 weeks action -->
        <record id="action_unpaid_invoice_2weeks" model="ir.actions.act_window">
            <field name="name">Unpaid Invoice 2 Weeks</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '&gt;=', (context_today() + relativedelta(weeks=-2)).strftime('%Y-%m-%d')),
                ('due_date', '&lt;', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team_id': active_id,
                    'default_team': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field>
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>

        <!-- unpaid.invoice month action -->
        <record id="action_unpaid_invoice_month" model="ir.actions.act_window">
            <field name="name">Unpaid Invoice Month</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '&gt;=', (context_today() + relativedelta(months=-1)).strftime('%Y-%m-%d')),
                ('due_date', '&lt;', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team_id': active_id,
                    'default_team': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field>
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>

        
        <!-- unpaid.invoice today action -->
        <record id="action_unpaid_invoice_today" model="ir.actions.act_window">
            <field name="name">Unpaid Invoice Today</field>
            <field name="res_model">unpaid.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[
                ('due_date', '=', context_today().strftime('%Y-%m-%d')),
                ]</field>
            <field name="context">{
                    'search_default_team_id': active_id,
                    'default_team_id': active_id,
                    'default_move_type':'out_invoice',
                    'move_type':'out_invoice',
                    'journal_type': 'sale',
                }
            </field> 
            <field name="search_view_id" ref="view_unpaid_invoice_filter"/>
        </record>   

        <!-- Menu Item -->
        <menuitem id="menu_unpaid_invoice_kanban" name="Unpaid Invoices" 
                  parent="point_of_sale.menu_point_rep" 
                  action="action_unpaid_invoice_kanban"
                  sequence="11"/>
    </data>
</odoo>
