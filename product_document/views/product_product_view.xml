<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_product_reader_form" model="ir.ui.view">
            <field name="name">product.info.form</field>
            <field name="model">product.info</field>
            <field name="arch" type="xml">
                <form string="Product Information" create="0">
                    <sheet>
                        <group col="2">  <!-- This ensures the two groups are side by side -->
                            <group>
                                <field name="display_name"/>
                                <field name="default_code"/>
                                <field name="categ_name" readonly="1"/>
                                <field name="available_qty_location_8" readonly="1"/>
                            </group>
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_reader_tree" model="ir.ui.view">
            <field name="name">product.info.tree</field>
            <field name="model">product.info</field>
            <field name="arch" type="xml">
                <tree string="Product Information" create="0">
                    <field name="product_id"/>
                    <field name="default_code"/>
                    <field name="categ_id"/>
                    <field name="available_qty_location_8"/>
                </tree>
            </field>
        </record>

        <record id="action_product_info" model="ir.actions.act_window">
            <field name="name">Product Info</field>
            <field name="res_model">product.info</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    View Products.
                </p>
            </field>
            <field name="context">{
                'group_by': ['categ_name'],
            }</field>
            <field name="domain">[('product_id.type', '=', 'product')]</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_product_info" name="Product Info" action="action_product_info" parent="sale.product_menu_catalog" sequence="6"/>
    </data>
</odoo>