<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Inherit the purchase order form view  -->
    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.direct.send.email.template</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_rfq_send']" position="before">
                <button name="direct_send_purchase" type="object" string="Direct Send" attrs="{'invisible': [('state', 'not in', ('draft','purchase'))]}" class="btn-primary"/>
            </xpath>
        </field>
    </record>
    <!--  Inherit the purchase order search view  -->
    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">purchase.order.view.search.inherit.direct.send.email.template</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='activities_exception']" position="after">
                <separator/>
                <filter name="direct_send_rfq" string="Direct Send RFQ" domain="[('direct_send_rfq', '=', 'True')]"/>
                <filter name="direct_send_po" string="Direct Send Purchase Orders" domain="[('direct_send_po', '=', 'True')]"/>
            </xpath>
        </field>
    </record>
</odoo>
