<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_partner_balance_tree" model="ir.ui.view">
            <field name="name">partner.balance.tree</field>
            <field name="model">partner.balance</field>
            <field name="arch" type="xml">
                <tree string="Partner Balances" create="false" js_class="partner_balance">
                    <field name="partner_id"/>
                    <field name="sales_user"/>
                    <field name="balance" sum="Total"/>
                    <field name="currency_id"/>
                    <field name="date_updated"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_partner_balance_form" model="ir.ui.view">
            <field name="name">partner.balance.form</field>
            <field name="model">partner.balance</field>
            <field name="arch" type="xml">
                <form string="Partner Balance" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="partner_id"/>
                            <field name="sales_user"/>
                            <field name="currency_id"/>
                            <field name="balance"/>
                        </group>
                        <group string="Related Move Lines">
                            <field name="move_line_ids" context="{'default_partner_id': partner_id}" options="{'no_open': True}">
                                <tree string="Move Lines">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="debit" sum="Total"/>
                                    <field name="credit" sum="Total"/>
                                    <field name="balance" sum="Total"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Action -->
        <record id="action_partner_balance" model="ir.actions.act_window">
            <field name="name">Partner Balances</field>
            <field name="res_model">partner.balance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    View and manage partner balances.
                </p>
            </field>
            <field name="context">{
                'group_by': ['sales_user'],
            }</field>
            <field name="domain">[
                ("partner_id.category_id","not ilike","Personel"),
                ("partner_id.id","=",1),
                ]</field>
        </record>

        <record id="action_view_move_lines" model="ir.actions.act_window">
            <field name="name">Move Lines</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        
        

        <!-- Menu Item -->
        <menuitem id="menu_partner_balance" name="Partner Balances" action="action_partner_balance" parent="point_of_sale.menu_point_rep" sequence="10"/>
        
    </data>
</odoo>
