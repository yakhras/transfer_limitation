<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<data>
    <record model="ir.ui.view" id="partner_balance_view_form">
        <field name="name">partner_balance_view_form</field> <!--View name-->
        <field name="model">res.partner</field> <!--Model name where view will applied-->
        <field name="inherit_id" ref="base.view_partner_form"/> <!--External ID of Parent view which inherited-->
        <field name="arch" type="xml">
            <field name="vat" position="after"> <!--existing field-->
                <!-- <field name="balance_id"/>New field -->
                <field name="balance" widget="monetary"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_balance_view_list">
        <field name="name">partner_balance_view_list</field> <!--View name-->
        <field name="model">res.partner</field> <!--Model name where view will applied-->
        <field name="inherit_id" ref="base.view_partner_tree"/> <!--External ID of Parent view which inherited-->
        <field name="arch" type="xml">
            <field name="phone" position="after"> <!--existing field-->
                <field name="balance"/>
            </field>
        </field>
    </record>

    <record id="view_res_partner_balance_filter" model="ir.ui.view">
        <field name="name">view.res.partner.balance.filter.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="salesperson" position="before">
                <filter string="Balance" name="balance" domain="[('balance', '!=', 0)]"/>
            </filter>
        </field>
    </record>
</data>
</odoo>
