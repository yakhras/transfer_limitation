<odoo>
    

    <template id="partner_balance_report_template">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="record" t-value="doc"/>
                    
                    <h2>Partner Balance Report</h2>
                    
                    <div class="partner_balance_record">
                        <h3>Partner Details</h3>
                        <p>
                            <strong>Partner Name:</strong> <span t-field="record.partner_id.name"/>
                        </p>
                        <p>
                            <strong>Balance:</strong> <span t-field="record.balance" t-field-options='{"widget": "monetary", "display_currency": record.currency_id}'/>
                        </p>
                        <p>
                            <strong>Currency:</strong> <span t-field="record.currency_id.name"/>
                        </p>
                        <p>
                            <strong>Last Updated:</strong> <span t-field="record.date_updated"/>
                        </p>
                    </div>
                    
                    <div class="related_move_lines">
                        <h3>Related Move Lines</h3>
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Move Line ID</th>
                                    <th>Debit</th>
                                    <th>Credit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="record.move_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.id"/></td>
                                        <td><span t-field="line.debit" t-field-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                        <td><span t-field="line.credit" t-field-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="footer">
                        <p>Generated on: <span t-field="record.date_updated"/></p>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
