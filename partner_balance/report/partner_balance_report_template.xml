<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <template id="partner_balance_report_template">
        <t t-call="web.html_container">
            <div class="page">
                <h2>Partner Balance Report</h2>
                <t t-foreach="docs" t-as="doc">
                    <!-- <t t-set="doc" t-value="doc"/> -->
                    <div class="partner_balance_doc">
                        <p><strong>Partner Name:</strong> <span t-field="doc.partner_id.name"/></p>
                        <p><strong>Balance:</strong> <span t-field="doc.balance"/></p>
                        <p><strong>Currency:</strong> <span t-field="doc.currency_id.name"/></p>
                        <p><strong>Last Updated:</strong> <span t-field="doc.date_updated"/></p>
                        <h3>Related Move Lines:</h3>
                        <t t-foreach="doc.move_line_ids" t-as="line">
                            <p>
                                <strong>Move Line ID:</strong> <span t-field="line.id"/>,
                                <strong>Debit:</strong> <span t-field="line.debit" t-field-options='{"widget": "monetary", "display_currency": line.currency_id}'/>,
                                <strong>Credit:</strong> <span t-field="line.credit" t-field-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                            </p>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
