<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <template id="partner_balance_report_template">
        <t t-call="web.html_container">
            <div class="page">
                <h2>Partner Balance Report</h2>
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-set="record" t-value="doc_id"/>
                    <div class="partner_balance_record">
                        <h2>Partner Balance Report</h2>
                        <p><strong>Partner Name:</strong> <span t-field="doc.partner_id.name"/></p>
                        <p><strong>Balance:</strong> <span t-field="doc.balance" t-field-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></p>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
